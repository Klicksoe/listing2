{% extends "admin.layout.twig" %}

{% form_theme form _self %}

{% block contentadmin %}

<h2>Configuration</h2>
<hr />

{% if error is defined and error is not empty %}
<div class="alert alert-warning">
	{% for err in error %}
		{{ err }}
	{% endfor %}
</div>
{% endif %}

{% if retour is defined and retour is not empty %}
<div class="alert alert-success">
	{{ retour }}
</div>
{% endif %}


{% if form is defined %} 

{{ form_errors(form) }}

<form class="form-horizontal" method="post">
	<div class="form-group">
		<label for="form_notice" class="col-sm-2 control-label">{{ form_label(form.notice) }}</label>
		<div class="col-sm-10">
			{{ form_widget(form.notice) }}
		</div>
	</div>
	{{ form_widget(form._token) }}
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<input type="submit" class="btn btn-default" name="submit" />
		</div>
	</div>
</form>
{% endif %}
</div>

{% endblock %}


{% block form_widget_simple %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" class="form-control" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endblock form_widget_simple %}